<!DOCTYPE html>
<html>
  <head>
    <title>Ep3Oo20181</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <%= link_to "Movie On", root_path, class: "navbar-brand" %>
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "New Movie", new_movie_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Account", edit_user_registration_path, class: "nav-link"%>
            </li>
          <% else %>
            <li class="nav-link">
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-link">
              <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>       
            </li>
          <% end %>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search movies" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">GO</button>
        </form>
      </div>
    </nav>


    <%= flash.each do |name,msg| %>
      <%= content_tag(:div, msg,class: "alert alert-info") %>
    <% end %>
    <%= yield %>
  </body>
</html>
